lado1 = int(input('Coloque um valor para o primeiro lado: '))
lado2 = int(input('Coloque um valor para o segundo lado: '))
lado3 = int(input('Coloque um valor para o terceiro lado: '))

if(lado1 < lado2 + lado3 and lado2 < lado3 + lado1 and lado3 < lado1 + lado2):
    print('Essas medidas podem formar um triângulo')

    if(lado1 == lado2 and lado2 == lado3 and lado3 == lado1):
        print('Essas medidas formam um triangulo equilátero')

    elif( lado1 != lado2 != lado3 !=lado1):
        print('Essas medidas formam um triangulo escaleno')

    else:
        print('Essas medidas formam um triangulo isósceles')

else:
    print('Essas medidas não podem formar um trinagulo rela')
